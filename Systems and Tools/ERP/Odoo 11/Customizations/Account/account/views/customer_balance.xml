
<odoo>

    <record id="account_customer_balance_report_view" model="ir.ui.view">
        <field name="name">Common Report</field>
        <field name="model">account.customer.balance</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group col="4">
                
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="partner"/>
            </group>
          
            <footer>
                <button name="print_customer_balance" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_account_customerbalance_menu" model="ir.actions.act_window">
        <field name="name">Customer Balance</field>
        <field name="res_model">account.customer.balance</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_customer_balance_report_view"/>
        <field name="target">new</field>
    </record>


<menuitem id="account_customer_balance_menu" name="Customer Balance"
 parent="account.menu_finance_legal_statement"
 action="action_account_customerbalance_menu"/>
</odoo>
