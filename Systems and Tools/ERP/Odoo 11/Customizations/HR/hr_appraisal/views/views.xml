              </group>
            </group> -->
        <separator string="Result"/>
            <group>
              <group>
                <field name="total" />
              </group>
              <group>
                <field name="average" />
              </group>
            </group>
         
          <separator string="Supervisor Comment"/>
          <field name="supervisor_comment" attrs="{'readonly': [('status', '=', True)]}"/>
           <separator string="Employee Comment"/>
           <field name="employee_comment" attrs="{'readonly': [('status', '=', True)]}"/>
          </sheet>
        </form>
      </field>
    </record>
    

    <!-- actions opening views on models -->
   
    <record model="ir.actions.act_window" id="hr_appraisal_action_window">
      <field name="name">Appraisal</field>
      <field name="res_model">hr.appraisal</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <menuitem name="Appraisal" id="hr_appraisal_menu_1" 
    parent="hr_appraisal_menu_root" action="hr_appraisal_action_window"  groups="hr_appraisal.group_hr_appraisal_manager"/>




    <record id="view_hr_appraisal_parameter_form" model="ir.ui.view">
        <field name="name">hr_appraisal_parameter_form</field>
        <field name="model">hr.appraisal.parameter</field>
        <field name="arch" type="xml">
          
          <form>
           
            <sheet>
              
            <group>
                <group>
                   
                <field name="job_position"/>
                 </group>
                  <group>
                   
                <field name="out_of"/>
                 </group>
                
            </group>
             <notebook>
                <page string="Subjects">
                    <field name="subject_line" >
                        <tree string="Subject Lines" 
                        editable="bottom" create="true">
                            
                            <field name="name" />

                        </tree>
                        <form string="Subject Line">
                            <field name="name" />
                        </form>
                    </field>
                          
                </page>
            </notebook>
            </sheet>
                
          </form>

        </field>
    </record>
     <record id="view_hr_appraisal_parameter_tree" model="ir.ui.view">
        <field name="name">hr_appraisal_parameter_tree</field>
        <field name="model">hr.appraisal.parameter</field>
        <field name="arch" type="xml">
          
          <tree>
                <field name="job_position"/>
                <field name="out_of"/>
          </tree>

        </field>
    </record>
    
    <record model="ir.actions.act_window" id="action_hr_appraisal_parameter">
        <field name="name">Appraisal Parameter</field>
        <field name="res_model">hr.appraisal.parameter</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Click here to create a new Appraisal Parameter.
          </p>
        </field>
    </record>



     <menuitem name="Configuration" id="hr_appraisal_configuration" 
    parent="hr_appraisal_menu_root" />
     <menuitem name="Appraisal Parameter" id="hr_appraisal_parameter" 
    parent="hr_appraisal_configuration" action="action_hr_appraisal_parameter"/>
 
