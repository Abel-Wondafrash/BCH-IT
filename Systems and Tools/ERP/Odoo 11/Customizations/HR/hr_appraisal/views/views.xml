<odoo>
  <data>
   <menuitem name="Appraisal" id="hr_appraisal_menu_root" 
   parent="hr.menu_hr_root" sequence="5"/>

  
   
    <!-- menu categories -->
    
    <!-- explicit list view definition -->
   
    <record model="ir.ui.view" id="hr_appraisal_list">
      <field name="name">hr_appraisal list</field>
      <field name="model">hr.appraisal</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_name"/>
          <field name="date"/>
          <field name="job_id"/>
          <field name="total"/>
          <field name="average"/>
        </tree>
      </field>
    </record>

     <record id="view_appraisal_approve" model="ir.ui.view">
    <field name="name">Approve </field>
    <field name="model">approve.appraisal</field>
    <field name="arch" type="xml">
        <form string="Approve" >
            <group>
                <label string="Are you sure do you want to  approve appraisal?"/>
            </group>
			 <group>
			 </group>
            <footer>
                <button name="yes" string="Yes" type="object" class="oe_highlight"/>
               
                <button string="no" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>
     <record model="ir.ui.view" id="hr_appraisal_form">
      <field name="name">hr_appraisal form</field>
      <field name="model">hr.appraisal</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <button name="approve_appraisal" string="Approve" 
                 type="object" class="oe_highlight" groups="hr_appraisal.group_hr_appraisal_approver" attrs="{'invisible': [('status', '=', True)]}"/>
            </header>

        <sheet>
         <field name="status" invisible="1"/>
        <group>
            <group>
               <field name="employee_name" attrs="{'readonly': [('status', '=', True)]}"/>
                <field name="job_id" attrs="{'readonly': [('status', '=', True)]}"/>
                <field name="out_of" />
            </group>

            <group>
              <field name="date" />
              <field name="immediate_supervisor" />
            </group>
        </group>
          <separator string="Evaluation Period"/>
            <group>
                <group >
                  <field name="date_from" attrs="{'readonly': [('status', '=', True)]}"/>
                </group>
                <group>
                  <field name="date_to" attrs="{'readonly': [('status', '=', True)]}"/>
                </group>
				
				
            </group>

			<group>
				 <field name="reason" />
			</group>
      <notebook>
                <page string="Subjects">
                    <field name="subject_line" >
                        <tree string="Subject Lines" 
                        editable="bottom" create="false">
                            
                            <field name="name" />
                            <field name="evaluation" />
                            
                            <field name="out_of_val" invisible="1" />
                        </tree>
                        <form string="Subject Line">
                            <field name="name" readonly="1" />
                            <field name="evaluation" />
                            <field name="out_of_val" invisible="1" />
                            
                        </form>
                    </field>
                          
                </page>
            </notebook>
           <!-- <separator string="Subject" attrs="{'readonly': [('status', '=', True)]}"/>
