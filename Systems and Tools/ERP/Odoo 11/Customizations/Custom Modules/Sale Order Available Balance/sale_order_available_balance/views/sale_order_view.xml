<odoo>
    <record id="view_order_form_available_balance" model="ir.ui.view">
        <field name="name">sale.order.form.available.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="current_balance" position="after">
                <field name="available_balance" readonly="1"/>
            </field>

            <!-- Add confirmation to the Cancel button -->
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="confirm">Are you sure you want to cancel this order?</attribute>
            </xpath>
        </field>
    </record>
</odoo>
